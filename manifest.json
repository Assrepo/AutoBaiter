{
  "manifest_version": 2,

  "name": "AutoBaiter",
  "description": "Bait them and Gain them",
  "version": "2.0.3",
  "icons": { "512": "icon.png" },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
  {
    "matches": ["*://*.instagram.com/*"],
    "css": ["libs/bootstrap.min.css", "libs/font-awesome.min.css", "content.css"],
    "js": ["libs/jquery.min.js", "content.js"]
  }],

  "background": {
      "scripts": ["libs/jquery.min.js", "background.js"]
    },

  "permissions": [
    "tabs", "*://*.instagram.com/*",
    "storage",
    "webNavigation",
    "downloads"
  ]
}
